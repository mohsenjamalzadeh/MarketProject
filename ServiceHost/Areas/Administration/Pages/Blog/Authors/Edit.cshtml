@model BlogManagement.Application.Contracts.Author.EditAuthor




    <div class="card">
        <div class="card-header">
            <div class="card-title-wrap bar-warning">
                <h4 class="card-title" id="basic-layout-colored-form-control">Edit @Model.Name</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="px-3">
                <form class="form" asp-page="./Index" asp-page-handler="Edit"
                      method="post"
                      data-ajax="true"
                      data-callback=""
                      data-action="Refresh"
                      enctype="multipart/form-data" >
                    <div class="form-body" >
                        <div class="form-group">
                            <label asp-for="Name">Name Author </label>
                            <input  asp-for="Name" type="text" class="form-control border-primary"  >
                            <span asp-validation-for="Name" class="error text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PictureTitle">PictureTitle</label>
                                    <input  asp-for="PictureTitle" type="text" class="form-control border-primary" >
                                    <span asp-validation-for="PictureTitle" class="error text-danger"></span>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PictureAlt">PictureAlt</label>
                                    <input  asp-for="PictureAlt" type="text" class="form-control border-primary" >
                                    <span asp-validation-for="PictureAlt" class="error text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Upload</span>
                                </div>
                                <div class="custom-file">
                                    <input asp-for="Picture" type="file" class="custom-file-input" id="inputGroupFile01" accept="image/*">
                                    <label  class="custom-file-label" for="inputGroupFile01">Choose file</label>

                                </div>
                            </div>
                            <span asp-validation-for="Picture" class="error text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <textarea rows="5"  asp-for="Description" type="text" class="form-control border-primary" ></textarea>
                            <span asp-validation-for="Description" class="error text-danger"></span>
                        </div>

                    </div>
                    <input type="hidden" asp-for="Id" value="@Model.Id"/>
                    <div class="form-actions right">
                        <button type="button" class="btn btn-danger mr-1"  data-dismiss="modal">
                            <i class="icon-trash"></i> Cancel
                        </button>
                        <button type="submit" class="btn btn-success">
                            <i class="icon-note"></i> Save
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

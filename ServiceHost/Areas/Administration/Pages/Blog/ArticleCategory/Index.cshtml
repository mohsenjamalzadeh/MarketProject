@model ServiceHost.Areas.Administration.Pages.Blog.ArticleCategory.IndexModel
@{
}


<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-header col-12">
                <div class="card-title-wrap bar-success  display-block p-2">
                    <h4 class="card-title ">Search </h4>
                </div>
                <form class="form-inline" role="form" method="get">
                    <div class="form-group m-1">
                        <input asp-for="SearchModel.Name" class="form-control" placeholder="Name Article Category">
                    </div>
                

                    <div class="form-group">
                        <div class="checkbox te">
                            InActives : @Html.CheckBoxFor(p => p.SearchModel.InActive)
                        </div>

                        @*    <div class="form-group m-1 ">
                            <select class="form-control">
                            <option value="0"> Group By ...</option>
                            </select>
                            </div>*@


                        <button asp-page="./Index" type="submit" class="btn btn-success waves-effect waves-light m-l-10 m-1 ">Search</button>

                        <a asp-page="./Index" class="btn btn-primary waves-effect waves-light m-l-10 m-1">Show All</a>

                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

<section id="file-export">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title ">Article Category Management</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <div id="DataTables_Table_10_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <a class="btn mr-1 shadow-z-2 btn-success float-lg-right" href="#showmodal=@Url.Page("./Index", "Create")">Add Article Category</a>

                            <table class="table table-striped table-bordered file-export dataTable" id="DataTables_Table_10" role="grid" aria-describedby="DataTables_Table_10_info">
                                <thead>
                                    <tr role="row">
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Picture</th>
                                        <th>Description</th>
                                        <th>Condition</th>
                                        <th>CreationDate</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ArticleCategories)
                                    {
                                        <tr role="row" class="even">
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td><img src="@item.Picture" style="border-radius: 15px 15px;max-width: 100px" /></td>
                                            <td>@item.Description</td>
                                            <td>
                                                @if (!item.IsActive)
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-danger round">InActive</button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-success round">Active</button>
                                                }
                                            </td>
                                            <td>@item.CreationDate</td>
                                            <td>
                                                <a class="success p-0" data-original-title="" title="" href="#showmodal=@Url.Page("./Index", "Edit",new {id=@item.Id})">
                                                    <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                                </a>

                                                @if (!item.IsActive)
                                                {
                                                    <a class="info p-0" data-original-title="" title="" asp-page="./Index" asp-page-handler="Active" asp-route-id="@item.Id">
                                                        <i class="fa fa-check font-medium-3 mr-2"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a class="danger p-0" data-original-title="" title="" asp-page="./Index" asp-page-handler="InActive" asp-route-id="@item.Id">
                                                        <i class="fa fa-trash-o font-medium-3 mr-2"></i>
                                                    </a>
                                                }


                                            </td>
                                        </tr>

                                    }


                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>
